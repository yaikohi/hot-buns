// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URL")
}

model Tweet {
  id                     String     @id @map("_id")
  created_at             String
  edit_history_tweet_ids String[]
  attachments            Attachment
  text                   String
  author_id              String
}

type Attachment {
  media_keys String?
}

model TweetMedia {
  id        String @id @default(uuid()) @map("_id")
  media_key String
  url       String
  type      String
  width     Int
  height    Int
}
